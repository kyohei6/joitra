<style>
  .like-btn {
 width: 25px;
 height: 30px;
 font-size: 25px;
 color: #808080; 
 margin-left: 20px;
 }

.unlike-btn {
 width: 25px;
 height: 30px;
 font-size: 25px;
 color: #e54747;
 margin-left: 20px;
 }
</style>
<% if current_user.likes?(post) %>
 <%= link_to favorite_path(id: post.id), method: :delete do %>
    <i class="fas fa-heart unlike-btn"></i>
  <% end %>
  <% else %>
  <%= link_to favorites_path(post_id: post.id), method: :post do %>
    <i class="far fa-heart like-btn" ></i>
  <% end %>
  <% end %>
